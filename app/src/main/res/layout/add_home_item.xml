<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_context"
    android:background="@color/white"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            app:layout_widthPercent="80%"
            android:paddingTop="@dimen/y8"
            android:paddingBottom="@dimen/y8"
            android:layout_centerVertical="true"
            android:id="@+id/first_rel_room"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_again_autoscene"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x8"
                android:layout_toRightOf="@+id/pic_room_img"
                android:text="家庭名称"
                android:textColor="@color/dark_gray"
                android:textSize="14sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/second_rel_room"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/first_rel_room"
            android:layout_toRightOf="@+id/first_rel_room"
            android:paddingTop="@dimen/y8"
            android:paddingBottom="@dimen/y8"
            app:layout_widthPercent="20%">

            <TextView
                android:id="@+id/txt_device_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="我的公司"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/img_again_autoscene"
                android:layout_width="wrap_content"
                android:src="@drawable/wode_right_arrow"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"

                />
        </RelativeLayout>
    </android.support.percent.PercentRelativeLayout>
</LinearLayout>


