<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/backtitle"
        android:visibility="gone" />

    <com.yanzhenjie.statusview.StatusView
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        app:fitsView="@+id/root_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/green">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:src="@drawable/icon_t_back" />

        <TextView
            android:id="@+id/project_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="关联面板"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/next_step_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone" />

    </RelativeLayout>

    <ListView
        android:id="@+id/panelistview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/p450"
        android:divider="#00000000"></ListView>

    <RelativeLayout
        android:id="@+id/panelrela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/p50">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/relatedpanel_bg"></RelativeLayout>


        <androidx.percentlayout.widget.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/y50">

            <LinearLayout
                android:id="@+id/panelinearone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_widthPercent="15%">

                <RelativeLayout
                    android:id="@+id/ptlitoneone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/relatedpanel_whitebtn"></RelativeLayout>

                    <Button
                        android:id="@+id/ptlioneonebtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@null" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/panelineartwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_widthPercent="30%">

                <RelativeLayout
                    android:id="@+id/ptlittwoone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/relatedpanel_whitebtn"></RelativeLayout>

                    <Button
                        android:id="@+id/ptlitwoonebtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@null" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ptlittwotwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/p40"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/relatedpanel_whitebtn"></RelativeLayout>

                    <Button
                        android:id="@+id/ptlitwotwobtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@null" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/panelinearthree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_widthPercent="45%">

                <RelativeLayout
                    android:id="@+id/ptlitone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/relatedpanel_whitebtn"></RelativeLayout>

                    <Button
                        android:id="@+id/ptlionebtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@null" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ptlittwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/p40"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/relatedpanel_whitebtn"></RelativeLayout>

                    <Button
                        android:id="@+id/ptlitwobtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@null" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ptlitthree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/p40"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/relatedpanel_whitebtn"></RelativeLayout>

                    <Button
                        android:id="@+id/ptlithreebtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@null" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/panelinearfour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_widthPercent="60%"

                >

                <RelativeLayout
                    android:id="@+id/paonerela"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:descendantFocusability="blocksDescendants">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/relatedpanel_whitebtn"></RelativeLayout>

                    <Button
                        android:id="@+id/paonebtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@null" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/patworela"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/p40"
                    android:layout_weight="1"
                    android:descendantFocusability="blocksDescendants">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/relatedpanel_whitebtn"></RelativeLayout>

                    <Button
                        android:id="@+id/patwobtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@null" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/pathreerela"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/p40"
                    android:layout_weight="1"
                    android:descendantFocusability="blocksDescendants">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/relatedpanel_whitebtn"></RelativeLayout>

                    <Button
                        android:id="@+id/pathreebtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@null" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/pafourrela"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/p40"
                    android:layout_weight="1"
                    android:descendantFocusability="blocksDescendants">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/relatedpanel_whitebtn"></RelativeLayout>

                    <Button
                        android:id="@+id/pafourbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@null" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.percentlayout.widget.PercentRelativeLayout>

        <LinearLayout
            android:id="@+id/paneThreeLuTiaoGuang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/p150"
            android:layout_marginTop="@dimen/p155"
            android:orientation="horizontal"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/paonerela_sanlu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/relatedpanel_whitebtn">

                <ImageView
                    android:id="@+id/paonebtn_sanlu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/light_turn_on" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/patworela_sanlu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/p40"
                android:layout_weight="1"
                android:background="@drawable/relatedpanel_whitebtn">

                <ImageView
                    android:id="@+id/patwobtn_sanlu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/light_turn_on" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pathreerela_sanlu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/p40"
                android:layout_weight="1"
                android:background="@drawable/relatedpanel_whitebtn">

                <ImageView
                    android:id="@+id/pathreebtn_sanlu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/light_turn_on" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pafourrela_sanlu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/p40"
                android:layout_weight="1"
                android:background="@drawable/relatedpanel_whitebtn">

                <Button
                    android:id="@+id/pafourbtn_sanlu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@null" />
            </RelativeLayout>
        </LinearLayout>

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/y100">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                app:layout_widthPercent="60%">

                <RelativeLayout
                    android:id="@+id/pafiverela"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:descendantFocusability="blocksDescendants">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/relatedpanel_blue"></RelativeLayout>

                    <ImageView
                        android:id="@+id/pafivebtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@null" />

                    <TextView
                        android:id="@+id/pafivetext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/e30"
                        android:textSize="@dimen/p28"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/pasixrela"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/p40"
                    android:layout_weight="1"
                    android:descendantFocusability="blocksDescendants">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/relatedpanel_blue"></RelativeLayout>

                    <ImageView
                        android:id="@+id/pasixbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@null" />

                    <TextView
                        android:id="@+id/pasixtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/e30"
                        android:textSize="@dimen/p28"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/pasevenrela"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/p40"
                    android:layout_weight="1"
                    android:descendantFocusability="blocksDescendants">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/relatedpanel_blue"></RelativeLayout>

                    <ImageView
                        android:id="@+id/pasevenbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@null" />

                    <TextView
                        android:id="@+id/paseventext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/e30"
                        android:textSize="@dimen/p28"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/paeightrela"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/p40"
                    android:layout_weight="1"
                    android:descendantFocusability="blocksDescendants">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/relatedpanel_blue"></RelativeLayout>

                    <ImageView
                        android:id="@+id/paeightbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@null" />

                    <TextView
                        android:id="@+id/paeighttext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/e30"
                        android:textSize="@dimen/p28"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.percentlayout.widget.PercentRelativeLayout>
    </RelativeLayout>
</LinearLayout>