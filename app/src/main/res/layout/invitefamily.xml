<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">


    <com.yanzhenjie.statusview.StatusView
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        app:fitsView="@+id/root_layout" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/green">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:paddingRight="20dp"
            android:src="@drawable/icon_t_back" />

        <TextView
            android:id="@+id/project_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="邀请家人"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/manager_room_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x8"
            android:layout_marginTop="8dp"
            android:text="添加"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

    <com.massky.sraum.view.ClearEditText
        android:id="@+id/familyedit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:layout_marginTop="@dimen/y20"
        android:layout_marginLeft="@dimen/p100"
        android:layout_marginRight="@dimen/p138"
        android:background="@null"
        android:hint="@string/famphone"
        android:inputType="number"
        android:textColor="@color/c6f"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/p2"
        android:layout_marginLeft="@dimen/p100"
        android:layout_marginRight="@dimen/p100"
        android:background="@color/ea" />

    <com.massky.sraum.view.ClearEditText
        android:id="@+id/nameedit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:layout_marginLeft="@dimen/p100"
        android:layout_marginRight="@dimen/p138"
        android:background="@null"
        android:hint="@string/famname"
        android:inputType="text"
        android:textColor="@color/c6f"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/p2"
        android:layout_marginLeft="@dimen/p100"
        android:layout_marginRight="@dimen/p100"
        android:background="@color/ea" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/c6f"
        android:layout_marginLeft="@dimen/p100"
        android:layout_marginTop="@dimen/y8"
        android:textSize="14sp"
        android:text="邀请成功后，登录密码默认为手机号的后6位"/>

    <Button
        android:id="@+id/fambtn_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:layout_marginLeft="@dimen/p66"
        android:layout_marginRight="@dimen/p66"
        android:layout_marginTop="@dimen/p100"
        android:background="@drawable/add_zigbee_device_btn"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>