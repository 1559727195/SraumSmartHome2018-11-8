<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y30"
    android:background="@color/white"
    android:clickable="true"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="true">

    <LinearLayout
        android:id="@+id/swipe_context"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:paddingLeft="@dimen/x5">

            <ImageView
                android:id="@+id/device_type_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_launcher"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/hand_device_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全屋灯光全开"
                    android:textColor="#171717"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/hand_gateway_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hand_device_content"
                    android:text="云场景"
                    android:textColor="#8a8a8a"
                    android:textSize="12sp" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:paddingRight="@dimen/x10">

            <ImageView
                android:id="@+id/hand_scene_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_root_active" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/rename_btn"
                android:layout_width="@dimen/x50"
                android:layout_height="match_parent"
                android:background="@color/blue_txt"
                android:text="重命名"
                android:textColor="@android:color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/edit_btn"
                android:layout_width="@dimen/x50"
                android:layout_height="match_parent"
                android:background="#FF9A02"
                android:text="编辑"
                android:textColor="@android:color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/delete_btn"
                android:layout_width="@dimen/x50"
                android:layout_height="match_parent"
                android:background="#FF0202"
                android:text="删除"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </LinearLayout>
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>



