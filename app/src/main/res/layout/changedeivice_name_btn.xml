<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F6F7FA"
    android:layout_height="match_parent">
    <com.yanzhenjie.statusview.StatusView
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        app:fitsView="@+id/root_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/green"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:paddingRight="20dp"
            android:src="@drawable/icon_t_back" />
        <TextView
            android:id="@+id/project_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/next_step_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x8"
            android:layout_marginTop="8dp"
            android:text="保存"
            android:textSize="16sp"
            android:textColor="@color/white"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/y6"
            android:paddingBottom="@dimen/y6"
            android:text="设备名称"
            android:layout_marginLeft="@dimen/x8"
            android:textSize="14sp"
            android:textColor="@color/dark_gray"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y10"
            android:text="找设备"
            android:paddingTop="@dimen/x1"
            android:paddingBottom="@dimen/x1"
            android:visibility="gone"
            android:paddingLeft="@dimen/x3"
            android:paddingRight="@dimen/x3"
            android:background="@drawable/blue_text_corner_bg"
            android:layout_marginRight="@dimen/x8"
            android:layout_alignParentRight="true"
            android:textSize="14sp"
            android:textColor="@color/blue_txt"/>

    </RelativeLayout>
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/y2"
        android:layout_height="wrap_content">
        <com.massky.sraumsmarthome.view.ClearEditText
            android:id="@+id/edit_password_gateway"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:paddingLeft="@dimen/x8"
            android:paddingTop="@dimen/y10"
            android:paddingBottom="@dimen/y10"
            android:paddingRight="@dimen/x8"
            android:background="@drawable/edit_white_shape"
            android:gravity="left"
            android:hint="设备名称"
            android:textSize="16sp"
            android:maxLength="15"
            app:layout_widthPercent="95%"
            >
        </com.massky.sraumsmarthome.view.ClearEditText>
    </android.support.percent.PercentRelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/light_control_linear"
        android:visibility="gone"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:text="第1路灯控名称"
                android:layout_marginLeft="@dimen/x8"
                android:textSize="14sp"
                android:textColor="@color/dark_gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:text="找设备"
                android:paddingTop="@dimen/x1"
                android:paddingBottom="@dimen/x1"
                android:paddingLeft="@dimen/x3"
                android:paddingRight="@dimen/x3"
                android:background="@drawable/blue_text_corner_bg"
                android:layout_marginRight="@dimen/x8"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:textColor="@color/blue_txt"/>

        </RelativeLayout>
        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/y2"
            android:layout_height="wrap_content">
            <com.massky.sraumsmarthome.view.ClearEditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:padding="@dimen/x8"
                android:background="@drawable/edit_gateway_shape"
                android:gravity="left"
                android:hint="未设置"
                android:textSize="16sp"
                android:maxLength="15"
                app:layout_widthPercent="95%"
                ></com.massky.sraumsmarthome.view.ClearEditText>
        </android.support.percent.PercentRelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:text="第2路灯控名称"
                android:layout_marginLeft="@dimen/x8"
                android:textSize="14sp"
                android:textColor="@color/dark_gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:text="找设备"
                android:paddingTop="@dimen/x1"
                android:paddingBottom="@dimen/x1"
                android:paddingLeft="@dimen/x3"
                android:paddingRight="@dimen/x3"
                android:background="@drawable/blue_text_corner_bg"
                android:layout_marginRight="@dimen/x8"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:textColor="@color/blue_txt"/>

        </RelativeLayout>
        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/y2"
            android:layout_height="wrap_content">
            <com.massky.sraumsmarthome.view.ClearEditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:padding="@dimen/x8"
                android:background="@drawable/edit_gateway_shape"
                android:gravity="left"
                android:hint="未设置"
                android:textSize="16sp"
                android:maxLength="15"
                app:layout_widthPercent="95%"
                ></com.massky.sraumsmarthome.view.ClearEditText>
        </android.support.percent.PercentRelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:text="第3路灯控名称"
                android:layout_marginLeft="@dimen/x8"
                android:textSize="14sp"
                android:textColor="@color/dark_gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:text="找设备"
                android:paddingTop="@dimen/x1"
                android:paddingBottom="@dimen/x1"
                android:paddingLeft="@dimen/x3"
                android:paddingRight="@dimen/x3"
                android:background="@drawable/blue_text_corner_bg"
                android:layout_marginRight="@dimen/x8"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:textColor="@color/blue_txt"/>

        </RelativeLayout>
        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/y2"
            android:layout_height="wrap_content">
            <com.massky.sraumsmarthome.view.ClearEditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:padding="@dimen/x8"
                android:background="@drawable/edit_gateway_shape"
                android:gravity="left"
                android:hint="未设置"
                android:textSize="16sp"
                android:maxLength="15"
                app:layout_widthPercent="95%"
                ></com.massky.sraumsmarthome.view.ClearEditText>
        </android.support.percent.PercentRelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:text="第4路灯控名称"
                android:layout_marginLeft="@dimen/x8"
                android:textSize="14sp"
                android:textColor="@color/dark_gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:text="找设备"
                android:paddingTop="@dimen/x1"
                android:paddingBottom="@dimen/x1"
                android:paddingLeft="@dimen/x3"
                android:paddingRight="@dimen/x3"
                android:background="@drawable/blue_text_corner_bg"
                android:layout_marginRight="@dimen/x8"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:textColor="@color/blue_txt"/>

        </RelativeLayout>
        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/y2"
            android:layout_height="wrap_content">
            <com.massky.sraumsmarthome.view.ClearEditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:padding="@dimen/x8"
                android:background="@drawable/edit_gateway_shape"
                android:gravity="left"
                android:hint="未设置"
                android:textSize="16sp"
                android:maxLength="15"
                app:layout_widthPercent="95%"
                ></com.massky.sraumsmarthome.view.ClearEditText>
        </android.support.percent.PercentRelativeLayout>
    </LinearLayout>

</LinearLayout>