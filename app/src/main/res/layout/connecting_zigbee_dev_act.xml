        <!--android:id="@+id/rel_key_txt"-->
        <!--android:layout_below="@+id/sraum_image_select"-->
        <!--android:layout_marginTop="@dimen/y20"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_height="wrap_content">-->
        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textColor="@color/green"-->
        <!--android:id="@+id/sraum_txt"-->
        <!--android:textSize="12sp"-->
        <!--android:text="连续按A键3次，再连续按B键3次，"/>-->
        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textColor="#000000"-->
        <!--android:layout_toRightOf="@+id/sraum_txt"-->
        <!--android:textSize="12sp"-->
        <!--android:text="指示灯快闪"-->
        <!--/>-->
        <!--</RelativeLayout>-->

        <com.massky.sraum.view.RoundProgressBar
            android:id="@+id/roundProgressBar2"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y100"
            android:layout_below="@+id/sraum_image_select"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            app:roundColor="#DDDDDD"
            app:roundProgressColor="@color/green"
            app:roundWidth="@dimen/x15"
            app:roundWidth_inner="@dimen/x40"
            app:textColor="@color/smssdk_gray"
            app:textIsDisplayable="true"
            app:textSize="15sp" />

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y30"
            android:paddingBottom="@dimen/y5">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_widthPercent="80%">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="路由器和设备尽量靠近"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10">

                    <ImageView
                        android:id="@+id/one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_wancheng" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x5"
                        android:layout_toRightOf="@+id/one"
                        android:text="找到设备"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y8">

                    <ImageView
                        android:id="@+id/two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_wancheng" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x5"
                        android:layout_toRightOf="@+id/two"
                        android:text="设备注册"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/x10"
                    android:layout_marginTop="@dimen/y8">

                    <ImageView
                        android:id="@+id/three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_weiwancheng" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x5"
                        android:layout_toRightOf="@+id/three"
                        android:text="设备初始化"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </RelativeLayout>

            </LinearLayout>
        </androidx.percentlayout.widget.PercentRelativeLayout>
    </RelativeLayout>
</LinearLayout>