<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/root_layout"
    android:background="@color/white"
    android:layout_height="match_parent">
    <com.yanzhenjie.statusview.StatusView
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        app:fitsView="@+id/root_layout" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/green"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/back"
            android:paddingRight="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_t_back"/>

        <TextView
            android:id="@+id/toolbar_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="文字报警"
            android:textColor="@color/white"
            android:textSize="18sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:id="@+id/edit_next_step"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="下一步"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/x10"
            android:textSize="16sp"
            />
    </RelativeLayout>
    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/y20"
        android:layout_height="wrap_content">
        <com.massky.sraum.view.ClearEditText
            android:id="@+id/edit_password_gateway"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:paddingBottom="@dimen/y10"
            android:paddingTop="@dimen/y10"
            android:paddingLeft="@dimen/x10"
            android:background="@drawable/edit_gateway_shape"
            android:gravity="left"
            android:hint="请输入网关的12位MAC号"
            android:inputType="textPassword"
            android:maxLength="15"
            android:paddingRight="10dp"
            app:layout_widthPercent="70%"
            >
        </com.massky.sraum.view.ClearEditText>
    </androidx.percentlayout.widget.PercentRelativeLayout>
</LinearLayout>