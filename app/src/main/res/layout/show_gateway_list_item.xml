<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFF2"
    android:orientation="vertical">


    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/sao_rel"
            android:layout_width="0dp"
            android:layout_height="@dimen/y40"
            android:layout_centerHorizontal="true"
            app:layout_widthPercent="70%">
            <!--android:background="@drawable/rectangle_top_shape"-->
            <TextView
                android:id="@+id/txt_sao_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="扫一扫添加网关" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/txt_sao_one"
                android:src="@drawable/wode_right_arrow" />
        </RelativeLayout>
    </androidx.percentlayout.widget.PercentRelativeLayout>


</LinearLayout>