<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yanzhenjie.statusview.StatusView
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        app:fitsView="@+id/root_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/green"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/back"
            android:paddingRight="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_t_back"/>

        <TextView
            android:id="@+id/toolbar_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="配置路由器信息"
            android:textColor="@color/white"
            android:textSize="16sp" />
        <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="8dp"-->
        <!--android:id="@+id/wode_setting"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:src="@drawable/wode_setting"/>-->
    </RelativeLayout>

    <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:layout_marginTop="50dp"-->
        <!--android:src="@mipmap/ic_launcher" />-->
    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/y15"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="0dp"
        app:layout_widthPercent="80%"
        android:layout_height="wrap_content"
        android:textColor="@color/smssdk_gray"
        android:layout_centerInParent="true"
        android:textSize="14sp"
        android:text="请输入设备所连路由器的名称和密码"/>
    </androidx.percentlayout.widget.PercentRelativeLayout>

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_widthPercent="90%"
        android:layout_marginTop="30dp">

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_per_lay"
            android:layout_centerHorizontal="true"
            app:layout_widthPercent="80%">
            <com.massky.sraum.view.ClearEditText
                android:id="@+id/edit_password_again"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:textColorHint="@color/gray"
                android:textColor="@color/white"
                android:background="@null"
                android:gravity="left"
                android:hint="路由器名称"
                android:inputType="text"
                android:maxLength="15"
                app:layout_widthPercent="80%" />

            <TextView
                android:id="@+id/scan_gateway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:visibility="gone"
                android:gravity="left"
                android:layout_alignParentRight="true"
                android:text="扫一扫" />
        </androidx.percentlayout.widget.PercentRelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@color/gray"
            android:layout_below="@+id/login_per_lay"
            app:layout_widthPercent="80%"></View>

    </androidx.percentlayout.widget.PercentRelativeLayout>


    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_widthPercent="90%"
        android:layout_marginTop="15dp">

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/per_rel_pass_lay"
            app:layout_widthPercent="80%">

            <com.massky.sraum.view.ClearEditText
                android:id="@+id/edit_password_gateway"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:background="@null"
                android:gravity="left"
                android:textColor="@color/white"
                android:hint="路由器密码"
                android:inputType="textPassword"
                android:textColorHint="@color/gray"
                android:maxLength="15"
                android:paddingRight="10dp"
                app:layout_widthPercent="80%" />

            <ImageView
                android:id="@+id/eyeimageview_id_gateway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:visibility="gone"
             android:layout_alignParentRight="true"
                android:src="@mipmap/eyeclose" />

        </androidx.percentlayout.widget.PercentRelativeLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_below="@+id/per_rel_pass_lay"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@color/gray"
            app:layout_widthPercent="80%"></View>
    </androidx.percentlayout.widget.PercentRelativeLayout>

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btn_login_gateway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/add_zigbee_device_btn"
            android:text="下一步"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_widthPercent="80%" />

    </androidx.percentlayout.widget.PercentRelativeLayout>
</LinearLayout>
